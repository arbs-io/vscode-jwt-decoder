{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: esbuild-watch",
      "type": "npm",
      "script": "esbuild-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "group": "watchers"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^([^\\s].*)\\((\\d+|\\,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "\\s*\\[watch\\] build started"
          },
          "endsPattern": {
            "regexp": "^\\s*\\[watch\\] build finished"
          }
        }
      }
    }
  ]
}
