{
  "name": "vscode-jwt-decoder",
  "displayName": "vscode-jwt-decoder",
  "description": "A vscode extension to locally debugging jwt token",
  "version": "1.0.12",
  "publisher": "AndrewButson",
  "icon": "images/logo_128x128.png",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/arbs-io/vscode-jwt-decoder.git"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/arbs-io"
  },
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:jwt"
  ],
  "main": "./out/extension.js",
  "browser": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "jwt",
        "extensions": [
          ".jwt"
        ],
        "icon": {
          "light": "./assets/jwt-light.png",
          "dark": "./assets/jwt-dark.png"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "jwt.showJsonPreviewCommand",
          "when": "editorLangId == jwt",
          "group": "navigation"
        },
        {
          "command": "jwt.showClaimsetPreviewCommand",
          "when": "editorLangId == jwt",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "jwt.showJsonPreviewCommand",
        "title": "JWT: Show token in decoded json view",
        "category": "jwt",
        "icon": {
          "light": "assets/showJsonPreviewCommand-light.png",
          "dark": "assets/showJsonPreviewCommand-dark.png"
        }
      },
      {
        "command": "jwt.showClaimsetPreviewCommand",
        "title": "JWT: Show rendered claimset",
        "category": "jwt",
        "icon": {
          "light": "assets/showClaimsetPreviewCommand-light.png",
          "dark": "assets/showClaimsetPreviewCommand-dark.png"
        }
      }
    ],
    "semanticTokenTypes": [
      {
        "id": "jwt_joseHeader",
        "description": "joseHeader"
      },
      {
        "id": "jwt_claimsSet",
        "description": "claimsSet"
      },
      {
        "id": "jwt_signature",
        "description": "signature"
      }
    ],
    "configurationDefaults": {
      "editor.wordWrap": "on",
      "workbench.editor.languageDetection": true,
      "editor.semanticTokenColorCustomizations": {
        "enabled": true,
        "rules": {
          "jwt_joseHeader": "#ce60b2",
          "jwt_claimsSet": "#a790e6",
          "jwt_signature": "#84dd69"
        }
      }
    }
  },
  "scripts": {
    "install:all": "npm install && cd webview-ui && npm install",
    "start:webview": "cd webview-ui && npm run start",
    "build:webview": "cd webview-ui && npm run build",
    "test:webview": "cd webview-ui && npm run test",
    "vscode:prepublish": "npm run build:webview && npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "deploy": "vsce publish --yarn"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "esbuild": "^0.17.4",
    "eslint": "^8.32.0",
    "typescript": "^4.9.4",
    "vsce": "^2.11.0"
  }
}
